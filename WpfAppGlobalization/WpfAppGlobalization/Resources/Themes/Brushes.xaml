<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BtnBackgroundBrush" Color="{DynamicResource BtnBackgroundColor}"/>
    <SolidColorBrush x:Key="BtnForegroundBrush" Color="{DynamicResource BtntForegroundColor}"/>

    <LinearGradientBrush x:Key="PrimaryBrush" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0"/>
        <GradientStop Color="{DynamicResource DarkPrimaryColor}" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{DynamicResource PrimaryTextColor}"/>

    <SolidColorBrush x:Key="WinBackgroundBrush" Color="{DynamicResource WinBackgroundColor}"/>

</ResourceDictionary>